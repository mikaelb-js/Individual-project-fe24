{
    "compilerOptions": {
        "jsx": "react-jsx",
        "moduleResolution": "Bundler",
        "module": "ESNext",
        "target": "ES2022",
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@app/*": [
                "./app/*"
            ],
            "@lib/*": [
                "./app/lib/*"
            ],
            "@server/*": [
                "./app/lib/server/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
}